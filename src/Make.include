.c.o:
#	@echo "Compiling:       $*.c"
	$(CC) $(CFLAGS) $(CPPFLAGS)  -c $<
	@if [ "$(ARCHIVE)" ]; then \
		$(AR) $(ARFLAGS) $(ARCHIVE) $@; \
		$(RANLIB) $(ARCHIVE); fi


HOST_OS =	linux-gnu

EXTRA_LIBS=	
THREADLIBS=	-lpthread

IRRD_OPS_LIBS=  
CRYPT_LIB=      -lcrypt
FLEX_PATH=      /usr/bin/flex
YACC=		bison -y

CC= 		gcc
CFLAGS= 	-g -O2 -Wall  -DHAVE_CONFIG_H 
CPPFLAGS= 	-D_REENTRANT -D_POSIX_PTHREAD_SEMANTICS -DFUNCPROTO -I../../include 

LD= 		gcc
LDFLAGS=	
RANLIB= 	ranlib
INSTALL= 	/usr/bin/install -c
MAKEDEP= 	makedepend
MAKEDEPCLEAN= 	rm -f .depend

prefix=		/usr/local
exec_prefix=	${prefix}
DESTDIR=	${exec_prefix}/sbin
MANDIR=		${prefix}/man

MRTLIB= 	../../lib/libmrt.a
CFGLIB=		../../lib/libcfg.a
MRT_LIBS=	$(CFGLIB) $(MRTLIB)
SYS_LIBS=	 -lpthread
LIBS=		$(MRT_LIBS) $(EXTRA_LIBS) $(SYS_LIBS)

QUANTIFY=	quantify -threads=yes -max-threads=80
PURIFY=		purify -threads=yes -max-threads=80  -cache-dir=./

SHELL = 	/bin/sh
CP =		cp -p
RM =		rm -f
ARFLAGS =	crv

PGPDIR =	gpg
